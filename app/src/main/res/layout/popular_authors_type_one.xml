<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dashboard_list_item_medium"
    android:layout_height="@dimen/dashboard_list_item_height"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="@dimen/dashboard_list_item_small"
        android:layout_height="@dimen/dashboard_list_item_small"
        android:id="@+id/one"
        android:layout_margin="1dp"
        android:layout_below="@+id/three">

        <ImageView
            android:layout_height="match_parent"
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name1"
            android:textSize="9sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_margin="4dp"
            android:layout_alignParentBottom="true"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="@dimen/dashboard_list_item_small"
        android:layout_height="@dimen/dashboard_list_item_small"
        android:id="@+id/two"
        android:layout_toRightOf="@+id/one"
        android:layout_margin="1dp"
        android:layout_below="@+id/three">

        <ImageView
            android:layout_height="match_parent"
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name2"
            android:textSize="9sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_margin="4dp"
            android:layout_alignParentBottom="true"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/dashboard_list_item_medium"
        android:layout_height="@dimen/dashboard_list_item_medium"
        android:orientation="vertical"
        android:id="@+id/three"
        android:layout_margin="1dp">

        <ImageView
            android:id="@+id/image3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>
    </RelativeLayout>
</RelativeLayout>