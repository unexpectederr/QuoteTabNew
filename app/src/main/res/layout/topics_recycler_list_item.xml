<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topics_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <com.yayandroid.parallaxrecyclerview.ParallaxImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/qwe"
        android:background="@android:color/black"
        android:id="@+id/hgc"
        android:layout_alignParentTop="true"
        android:alpha="0.6"/>

    <TextView
        android:id="@+id/topic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        tools:text="Name"
        android:textColor="@color/main_color_light"
        android:layout_centerInParent="true"
        android:background="@drawable/background_outline"
        android:paddingBottom="7dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="7dp"/>

</RelativeLayout>


