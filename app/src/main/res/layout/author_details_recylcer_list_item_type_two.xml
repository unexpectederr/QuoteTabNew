<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/quoteImageTypeTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

        <ImageView
            android:src="@drawable/ic_menu_share"
            android:id="@+id/share_icon_image"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignBottom="@+id/quoteImageTypeTwo"
            android:layout_alignRight="@+id/quoteImageTypeTwo"/>

        <ImageView
            android:id="@+id/ic_favorite_image"
            android:src="@drawable/ic_favorite_empty"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignBottom="@+id/quoteImageTypeTwo"
            android:layout_toLeftOf="@+id/share_icon_image"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>

