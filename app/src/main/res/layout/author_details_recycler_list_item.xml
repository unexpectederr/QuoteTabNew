<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/quoteText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/background_light"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"/>

        <ImageView
            android:src="@drawable/ic_menu_share"
            android:id="@+id/share_icon_text"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignBottom="@+id/quoteText"
            android:layout_alignRight="@+id/quoteText"/>

        <ImageView
            android:id="@+id/ic_favorite_text"
            android:src="@mipmap/favorite_icon"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignBottom="@+id/quoteText"
            android:layout_toLeftOf="@+id/share_icon_text"/>

        <TextView
            android:id="@+id/quoteTag"
            android:background="@drawable/button_outline"
            android:layout_alignParentRight="true"
            android:padding="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            tools:text="inspirational"
            android:textColor="@color/cardview_light_background"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/quoteTag2"
            android:background="@drawable/button_outline"
            android:layout_toLeftOf="@+id/quoteTag"
            android:padding="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            tools:text="inspirational"
            android:textColor="@color/cardview_light_background"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/quoteTag3"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_outline"
            android:padding="2dp"
            android:layout_width="wrap_content"
            tools:text="inspirational"
            android:textColor="@color/cardview_light_background"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/quoteTag2"
            android:layout_toStartOf="@+id/quoteTag2"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>

