<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:id="@+id/save_image">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_image"
            android:scaleType="centerCrop"
            android:layout_alignBottom="@+id/qwe"
            android:layout_alignParentTop="true"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/qwe"
            android:background="@android:color/black"
            android:id="@+id/hgc"
            android:layout_alignParentTop="true"
            android:alpha="0.6">

        </ImageView>

        <LinearLayout
            android:id="@+id/tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/background_outline_g"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/light_gray"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/background_outline_g"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/light_gray"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/tag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/background_outline_g"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/light_gray"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/tag4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/background_outline_g"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/light_gray"
                android:visibility="visible"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/quoteText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/main_color_light"
            android:layout_below="@+id/tags"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="19sp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:lineSpacingExtra="5sp"
            android:textStyle="normal|bold"/>

        <TextView
            tools:text="Name"
            android:layout_marginBottom="40dp"
            android:textColor="@color/main_color_light"
            android:layout_below="@+id/quoteText"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_author_name"
            android:textSize="12sp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_author_name"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:id="@+id/qwe">

            <ImageView
                android:src="@drawable/ic_download_icon"
                android:id="@+id/download_icon"
                android:layout_marginBottom="12dp"
                android:tint="@color/cardview_shadow_start_color"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:padding="3dp"
                android:clickable="true"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <ImageView
                android:src="@drawable/ic_menu_share"
                android:id="@+id/share_icon"
                android:layout_marginBottom="12dp"
                android:tint="@color/cardview_shadow_start_color"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:clickable="true"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <ImageView
                android:id="@+id/favorite_icon"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="12dp"
                android:tint="@color/cardview_shadow_start_color"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:clickable="true"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

